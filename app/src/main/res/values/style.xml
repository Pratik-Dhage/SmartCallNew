<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="toolBarStyle">
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="common_text_style">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="item_text_style" parent="common_text_style">
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
    </style>


    <style name="heading_text_style">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/textBlue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mid_text_style">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/textBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewBorderStyle">
        <item name="android:layout_height">@dimen/_2sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/borderColor</item>
    </style>

   <style name="editTextStyle">
       <item name="android:layout_marginStart">@dimen/_10sdp</item>
       <item name="android:layout_marginEnd">@dimen/_10sdp</item>
       <item name="hintTextColor">@color/borderColor</item>
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:textSize">@dimen/_14ssp</item>
       <item name="android:textColor">@color/black</item>
   </style>

    <style name="ButtonStyle">
        <item name="android:layout_marginStart">@dimen/_30sdp</item>
        <item name="android:layout_marginEnd">@dimen/_30sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/textBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="MainConstraintStyle">
       <item name="android:background">@color/white</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>


</resources>