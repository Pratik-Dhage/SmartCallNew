<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="testViewModel"
            type="com.example.test.api_manager.TestViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/MainConstraintStyle"
        tools:context=".api_manager.TestActivity">

        <TextView
            android:id="@+id/txtSizeOfLeadList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/semi_mid_text_style"
            tools:text="Size of Lead List : 100"
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/txtSizeOfDashBoardList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@id/txtSizeOfLeadList"
            style="@style/semi_mid_text_style"
            tools:text="Size of DashBoard List : 100"
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>