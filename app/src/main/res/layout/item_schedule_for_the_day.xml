<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        style="@style/MainConstraintStyle"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtQueueNameScheduleForTheDay"
            tools:text="Pratik Dhage"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="@color/textBlue"
            android:maxLength="12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            style="@style/common_text_style"/>


        <TextView
            android:id="@+id/txtTotalScheduleForTheDay"
            tools:text="9000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtCompletedScheduleForTheDay"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:visibility="invisible"
            android:layout_width="@dimen/_30sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            style="@style/common_text_style"/>

        <TextView
            android:id="@+id/txtCompletedScheduleForTheDay"
            tools:text="9000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_width="@dimen/_30sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintEnd_toStartOf="@+id/txtPendingScheduleForTheDay"
            style="@style/common_text_style"/>



        <TextView
            android:id="@+id/txtPendingScheduleForTheDay"
            tools:text="0000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:textColor="@color/black"
            android:textStyle="normal"
           app:layout_constraintEnd_toStartOf="@+id/ivRightArrowScheduleForTheDay"
            android:layout_width="@dimen/_30sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            style="@style/common_text_style"/>

        <ImageView
            android:id="@+id/ivRightArrowScheduleForTheDay"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/right_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_3sdp"
            app:layout_constraintTop_toTopOf="@+id/txtCompletedScheduleForTheDay"
            app:layout_constraintBottom_toBottomOf="@id/txtCompletedScheduleForTheDay"
            app:tint="@color/textBlue" />

       <!-- <View
            android:id="@+id/viewBorder"
            style="@style/viewBorderStyle"
            android:background="@color/borderColor"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtDashBoardListName" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>