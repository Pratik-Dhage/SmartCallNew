<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/MainConstraintStyle"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtLeadName"
        tools:text="Pratik D"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_2sdp"
        app:layout_constraintStart_toStartOf="parent"
       style="@style/common_text_style"/>

    <TextView
        android:id="@+id/txtMobileNumber"
        tools:text="123456789"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
       app:layout_constraintEnd_toStartOf="@id/ivLeadList"
        android:layout_marginEnd="@dimen/_50sdp"
       style="@style/common_text_style"/>

    <ImageView
        android:id="@+id/ivLeadList"
        android:src="@drawable/hand"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
       android:layout_marginEnd="@dimen/_20sdp"
        android:layout_height="wrap_content"
        app:tint="@color/textBlue" />


    <View
        android:id="@+id/viewBorder"
        style="@style/viewBorderStyle"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtLeadName" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>