<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.test.main_dashboard.MainDashBoardViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/MainConstraintStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main_dashboard.MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolBarStyle"
            android:background="@color/textBlue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/dashboard"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:id="@+id/dashboardScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rootConstraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp">


                <TextView
                    android:id="@+id/txtWelcomeUser"
                    style="@style/heading_text_style"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Welcome Tanisha!"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="italic"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtWelcomeUser"
                    tools:text="22nd Feb 2023, Wednesday" />

                <TextView
                    android:id="@+id/labelCallScheduled"
                    style="@style/heading_text_style"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:text="@string/calls_scheduled_for_the_day"
                    android:textAlignment="center"
                    android:textColor="@color/dark_grey"
                    android:textStyle="bold|italic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtDate" />

                <TextView
                    android:id="@+id/labelTotal"
                    style="@style/semi_mid_text_style"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/total"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelCallScheduled" />


                <TextView
                    android:id="@+id/labelCompletedCallsTotal"
                    style="@style/semi_mid_text_style"
                    android:layout_marginStart="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/completed_calls"
                    app:layout_constraintEnd_toStartOf="@id/labelPendingCallsTotal"
                    app:layout_constraintStart_toEndOf="@id/labelTotal"
                    app:layout_constraintTop_toBottomOf="@id/labelCallScheduled" />

                <TextView
                    android:id="@+id/labelPendingCallsTotal"
                    style="@style/semi_mid_text_style"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/pending_calls"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/labelCompletedCallsTotal"
                    app:layout_constraintTop_toBottomOf="@id/labelCallScheduled" />

                <!--Constraint Custom Card Card For Total Calls start Here-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clTotalCallScheduled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner_bg"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelCompletedCallsTotal">



                <TextView
                    android:id="@+id/txtTotalCalls"
                    style="@style/common_text_style"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="100"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/clTotalCallScheduled" />



                <TextView
                    android:id="@+id/txtCompletedCallsTotal"
                    style="@style/common_text_style"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_50sdp"
                    android:text="60"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txtTotalCalls"
                    app:layout_constraintTop_toTopOf="@id/clTotalCallScheduled" />


                <TextView
                    android:id="@+id/txtPendingCallsTotal"
                    style="@style/common_text_style"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:text="40"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/clTotalCallScheduled" />


                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--Constraint Card End here-->


                <TextView
                    android:id="@+id/labelQueue"
                    style="@style/semi_mid_text_style"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:text="@string/queue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clTotalCallScheduled" />

                <TextView
                    android:id="@+id/labelCompletedCalls"
                    style="@style/semi_mid_text_style"
                    android:layout_marginStart="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:text="@string/completed_calls"
                    app:layout_constraintEnd_toStartOf="@id/labelPendingCalls"
                    app:layout_constraintStart_toEndOf="@id/labelQueue"
                    app:layout_constraintTop_toBottomOf="@id/clTotalCallScheduled" />

                <TextView
                    android:id="@+id/labelPendingCalls"
                    style="@style/semi_mid_text_style"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:text="@string/pending_calls"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/labelCompletedCalls"
                    app:layout_constraintTop_toBottomOf="@id/clTotalCallScheduled" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDashBoardMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:itemCount="3"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:visibility="invisible"
                    tools:listitem="@layout/item_dashboard"
                    app:layout_constraintTop_toBottomOf="@id/labelCompletedCalls"/>

                <View
                    android:id="@+id/viewBorder1"
                    style="@style/viewBorderStyle"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelCompletedCalls" />

                <TextView
                    android:id="@+id/labelMarketing"
                    style="@style/common_text_style"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/marketing"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewBorder1" />

                <TextView
                    android:id="@+id/txtMarketingCompletedCalls"
                    style="@style/common_text_style"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_50sdp"
                    android:text="45"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/labelMarketing"
                    app:layout_constraintTop_toBottomOf="@id/viewBorder1" />


                <TextView
                    android:id="@+id/txtMarketingPendingCalls"
                    style="@style/common_text_style"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:text="25"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewBorder1" />


                <View
                    android:id="@+id/viewBorder2"
                    style="@style/viewBorderStyle"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelMarketing" />

                <TextView
                    android:id="@+id/labelCollection"
                    style="@style/common_text_style"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/collection"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewBorder2" />

                <TextView
                    android:id="@+id/txtCollectionCompletedCalls"
                    style="@style/common_text_style"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_50sdp"
                    android:text="0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/labelCollection"
                    app:layout_constraintTop_toBottomOf="@id/viewBorder2" />


                <TextView
                    android:id="@+id/txtCollectionPendingCalls"
                    style="@style/common_text_style"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:text="45"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewBorder2" />

                <View
                    android:id="@+id/viewBorder3"
                    style="@style/viewBorderStyle"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelCollection" />

                <TextView
                    android:id="@+id/labelWelcomeCall"
                    style="@style/common_text_style"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/welcome_call"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewBorder3" />

                <TextView
                    android:id="@+id/txtWelcomeCompletedCalls"
                    style="@style/common_text_style"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_50sdp"
                    android:text="45"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/labelMarketing"
                    app:layout_constraintTop_toBottomOf="@id/viewBorder3" />


                <TextView
                    android:id="@+id/txtWelcomePendingCalls"
                    style="@style/common_text_style"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:text="45"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewBorder3" />

                <View
                    android:id="@+id/viewBorder4"
                    style="@style/viewBorderStyle"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelWelcomeCall" />


                <TextView
                    android:id="@+id/labelRenewal"
                    style="@style/common_text_style"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/renewal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewBorder4" />

                <TextView
                    android:id="@+id/txtRenewalCompletedCalls"
                    style="@style/common_text_style"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_50sdp"
                    android:text="45"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/labelMarketing"
                    app:layout_constraintTop_toBottomOf="@id/viewBorder4" />


                <TextView
                    android:id="@+id/txtRenewalPendingCalls"
                    style="@style/common_text_style"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:text="45"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewBorder4" />


                <View
                    android:id="@+id/viewBorder5"
                    style="@style/viewBorderStyle"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.516"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelRenewal" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>