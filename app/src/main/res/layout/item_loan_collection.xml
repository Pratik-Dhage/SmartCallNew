<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/MainConstraintStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtName"
            style="@style/common_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textStyle="normal"
            android:ellipsize="end"
            android:maxLength="13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Sairaj Naidu" />


        <TextView
            android:id="@+id/labelStatus"
            style="@style/common_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="@string/status"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@id/txtName"
            app:layout_constraintTop_toBottomOf="@id/txtName" />

        <TextView
            android:id="@+id/txtStatus"
            style="@style/common_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            tools:text=" Active"
            android:textStyle="normal"
           app:layout_constraintStart_toEndOf="@id/labelStatus"
            app:layout_constraintTop_toBottomOf="@id/txtName" />


        <TextView
            android:id="@+id/txtLocation"
            android:ellipsize="end"
            android:maxLength="10"
            style="@style/common_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textStyle="normal"
            app:layout_constraintEnd_toStartOf="@+id/txtDistance"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Siddapur" />

        <TextView
            style="@style/common_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="@string/AttemptNo"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@id/txtLocation"
            app:layout_constraintTop_toBottomOf="@id/txtLocation" />

        <TextView
            android:id="@+id/txtDistance"
            style="@style/common_text_style"
            android:ellipsize="end"
            android:maxLength="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:textStyle="normal"
            app:layout_constraintEnd_toStartOf="@id/label_KM"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3.5656" />

        <TextView
            android:id="@+id/label_KM"
            style="@style/common_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:textStyle="normal"
            app:layout_constraintEnd_toStartOf="@id/ivMap"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/km" />


        <ImageView
            android:id="@+id/ivMap"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:src="@drawable/location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtDistance"
            app:layout_constraintBottom_toBottomOf="@id/txtDistance"
            app:tint="@color/red" />


        <TextView
            android:id="@+id/txtAttemptNo"
            style="@style/common_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:textStyle="normal"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/txtDistance"
            app:layout_constraintTop_toBottomOf="@id/txtDistance"
            tools:text="0" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@color/textBlue"
            app:layout_constraintTop_toBottomOf="@id/txtStatus" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>