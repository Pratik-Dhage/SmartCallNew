<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_marginEnd="@dimen/_20sdp"
    android:background="@drawable/rounded_dialog_corner">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">

       <EditText
           android:id="@+id/edtPleaseSpecifyName"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:hint="@string/please_specify_name"
           android:layout_width="wrap_content"
           android:inputType="text"
           android:maxLength="20"
           android:maxLines="1"
           android:textAlignment="center"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginTop="@dimen/_30sdp"
           android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtPleaseSpecifyContact"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/please_specify_contact"
            android:layout_width="wrap_content"
            android:inputType="number"
            android:maxLength="10"
            android:maxLines="1"
            android:textAlignment="center"
            android:digits="0123456789"
           app:layout_constraintTop_toBottomOf="@id/edtPleaseSpecifyName"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnProceed"
            android:backgroundTint="@color/green"
            app:layout_constraintTop_toBottomOf="@id/edtPleaseSpecifyContact"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/proceed"
            android:textStyle="normal"
            android:layout_width="@dimen/_136sdp"
            android:layout_height="@dimen/_45sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ivCancel"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/cancel_close"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        app:tint="@color/red" />

</RelativeLayout>
