<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/MainConstraintStyle"
    tools:context=".fragments_activity.VisitCompletionActivity">

    <TextView
        android:id="@+id/btnVisitCompleteNoChange"
        android:text="@string/visit_complete_no_change"
        android:textAllCaps="true"
        android:background="@drawable/round_corner_bg"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_60sdp"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:padding="@dimen/_10sdp"
        android:backgroundTint="@color/barnRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/btnVisitCompleteUpdateDetails"
        android:text="@string/visit_complete_update_details"
        android:textAllCaps="true"
        android:background="@drawable/round_corner_bg"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/btnVisitCompleteNoChange"
        android:layout_marginTop="@dimen/_30sdp"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:padding="@dimen/_10sdp"
        android:backgroundTint="@color/textGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/btnVisitCompleteEscalateToBM"
        android:text="@string/visit_complete_escalate_to_bm"
        android:textAllCaps="true"
        android:background="@drawable/round_corner_bg"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVisitCompleteUpdateDetails"
        android:layout_marginTop="@dimen/_30sdp"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:padding="@dimen/_10sdp"
        android:backgroundTint="@color/brightOrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>