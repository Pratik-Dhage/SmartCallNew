<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        style="@style/MainConstraintStyle"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtQueue"
            tools:text="Marketing"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/common_text_style"/>

        <TextView
            android:id="@+id/txtName"
            tools:text="Pratik D"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_20sdp"
           app:layout_constraintEnd_toStartOf="@id/txtCallDate"
           android:layout_marginEnd="@dimen/_40sdp"
            style="@style/common_text_style"/>

        <TextView
            android:id="@+id/txtCallDate"
            tools:text="22/2/23"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintEnd_toStartOf="@id/txtCallTime"
            style="@style/common_text_style"/>

        <TextView
            android:id="@+id/txtCallTime"
            tools:text="5:00PM"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_20sdp"
           android:layout_marginEnd="@dimen/_10sdp"
            style="@style/common_text_style"/>


        <View
            android:id="@+id/viewBorder"
            style="@style/viewBorderStyle"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtQueue" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>