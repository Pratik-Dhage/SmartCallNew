<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/MainConstraintStyle"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/txtNotesHistoryUserName"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_2sdp"
        tools:text="UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txtNotesHistoryDateTime"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="@color/black"
       app:layout_constraintTop_toBottomOf="@id/txtNotesHistoryUserName"
       android:layout_marginTop="@dimen/_2sdp"
        tools:text="17-06-2023 12:11 AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txtNotesHistory"
        android:textSize="@dimen/_11ssp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="@color/black"
       app:layout_constraintTop_toBottomOf="@id/txtNotesHistoryDateTime"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Customer was busy"
        android:inputType="textMultiLine"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>